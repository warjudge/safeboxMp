.all-screen {
    width: 100%;
    min-height: 100%;
    border-top: 1px solid #F2F2F2;
    background-color: #fff;
}
.header {
    width: 100%;
    height: 94rpx;
    display: flex;
    font-size: 30rpx;
}
.top-tap {
    flex: 1;
    text-align: center;
    line-height: 94rpx;
}
.top-tap.top-tap-select {
    border-bottom: 1px solid #FD6070;
    color: #FD6070;
}
.select-type {
    width: 100%;
    font-size: 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #F2F2F2;
}
.content {
    box-sizing: border-box;
    padding: 0px 20rpx;
    /*padding: 0px 40rpx;*/
}
.con-list {
    height: 251rpx;
    background-color: #fff;
    border-bottom: 1px solid #F2F2F2;
    padding-top: 40rpx;
    box-sizing: border-box;
}
.list-top {
    height: 106rpx;
    display: flex;
    justify-content: space-around;
    /*background-color: skyblue;*/
    align-items: center;
}
.top-img {
    display: flex;
    align-items: center;
    width: 515rpx;
}
.img-item {
    width: 96rpx;
    height: 96rpx;
    margin-right: 8rpx
}
.top-number {
    font-size: 24rpx;
}
.top-center {
    font-size: 24rpx;
}
.center-number {
    text-align: right;
}
.top-amount {
    color: red;
}
.list-bottom {
    height: 106rpx;
    display: flex;
    justify-content: space-around;
    /*background-color: greenyellow;*/
    align-items: center;
}
.bottom-left {
    display: flex;
    align-items: center;
    width: 70%;
}
.bottom-img {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}
.bottom-name {
    margin-right: 30rpx;
    color: #C5C5C5;
    font-size: 24rpx;
    font-weight: bold;
}
.bottom-states {
    margin-right: 10rpx;
    width:86rpx;
    height:40rpx;
    background:rgba(253,96,112,1);
    border-radius:10rpx;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
}
.bottom-right {
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 30%;
}
